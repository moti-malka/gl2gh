# GitLab Configuration
GITLAB_BASE_URL=https://gitlab.com
GITLAB_TOKEN=your-gitlab-token-here
GITLAB_ROOT_GROUP=  # Optional - omit to scan all groups

# Application Configuration
OUTPUT_DIR=./output
MAX_API_CALLS=5000
MAX_PER_PROJECT_CALLS=200

# Logging Configuration
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
JSON_LOGGING=false  # Set to true for production structured logging
LOG_FILE=  # Optional - set path for file logging

# Environment
ENVIRONMENT=development  # development, staging, production

# Monitoring (for production)
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_PORT=8080

# Grafana Configuration (for docker-compose)
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=changeme

# SMTP Configuration (for alerting)
SMTP_PASSWORD=your-smtp-password
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
PAGERDUTY_SERVICE_KEY=your-pagerduty-service-key

# Docker/Kubernetes Configuration
VERSION=0.1.0
BUILD_DATE=
VCS_REF=
